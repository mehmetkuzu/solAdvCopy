{
	"name": "soL Haber'den referans bilgileriyle kopyalama",
	"description": "soL Haber'den tarih, mahre√ß gibi bilgiler ekleyerek metin kopyalama",
	"version": "0.4.2",
	"permissions": ["contextMenus",
		"clipboardWrite",
		"storage"],
		"background": {
			"service_worker": "background.js"
		},
		"content_scripts": [ 
			{
				"matches": [
					"*://*/*",
					"https://haber.sol.org.tr/*"
				],
				"js": ["content.js"]
			}
		],
		"options_ui": {
			"page": "options.html",
			"open_in_tab": false
		},
		"commands": {
			"advancedCopy": {
				"suggested_key": "Ctrl+C",
				"description": "Advanced Copy"
			}
		},
		"manifest_version": 3,
		"icons" : {
			"128": "/images/solAdvCopy128.png"
		}
}
